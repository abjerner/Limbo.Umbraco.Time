<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--Based on: https://github.com/bergmania/Bergmania.OpenStreetMap/blob/main/Bergmania.OpenStreetMap/build/Bergmania.OpenStreetMap.targets -->

  <PropertyGroup>
    <SkybrudUmbracoTimeContentFilesPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\Skybrud.Umbraco.Time\**\*.*</SkybrudUmbracoTimeContentFilesPath>
  </PropertyGroup>

  <Target Name="CopySkybrudUmbracoTimeAssets" BeforeTargets="Build">
    <ItemGroup>
      <SkybrudUmbracoTimeContentFiles Include="$(SkybrudUmbracoTimeContentFilesPath)" />
    </ItemGroup>
    <Message Text="Copying Skybrud.Umbraco.Time files: $(SkybrudUmbracoTimeContentFilesPath) - #@(SkybrudUmbracoTimeContentFiles->Count()) files"  Importance="high" />
    <Copy
      SourceFiles="@(SkybrudUmbracoTimeContentFiles)"
      DestinationFiles="@(SkybrudUmbracoTimeContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Skybrud.Umbraco.Time\%(RecursiveDir)%(Filename)%(Extension)')"
      SkipUnchangedFiles="true" />
  </Target>

  <Target Name="ClearSkybrudUmbracoTimeAssets" BeforeTargets="Clean">
    <ItemGroup>
      <SkybrudUmbracoTimeDir Include="$(MSBuildProjectDirectory)\App_Plugins\Skybrud.Umbraco.Time\" />
    </ItemGroup>
    <Message Text="Clear old Skybrud.Umbraco.Time files"  Importance="high" />
    <RemoveDir Directories="@(SkybrudUmbracoTimeDir)"  />
  </Target>

</Project>